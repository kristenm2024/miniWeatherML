#!/bin/bash

source ${MODULESHOME}/init/bash
module reset
module load PrgEnv-amd cray-parallel-netcdf cmake craype-accel-amd-gfx90a cray-hdf5 cray-netcdf
module list

export CC=cc
export FC=ftn
export CXX=CC

export YAKL_ARCH=HIP

export MPICH_GPU_SUPPORT_ENABLED=1

export YAKL_HIP_FLAGS="-DHAVE_MPI -DMW_GPU_AWARE_MPI -munsafe-fp-atomics -O0 -g -DYAKL_DEBUG -I${ROCM_PATH}/include -D__HIP_ROCclr__ -D__HIP_ARCH_GFX90A__=1 --rocm-path=${ROCM_PATH} --offload-arch=gfx90a -x hip -Wno-unused-result -Wno-macro-redefined -I$OLCF_HDF5_ROOT/include"
export YAKL_F90_FLAGS="-O0 -g -DSCREAM_DOUBLE_PRECISION"
export MW_LINK_FLAGS="-g --rocm-path=${ROCM_PATH} -L${ROCM_PATH}/lib -lamdhip64 -L$OLCF_HDF5_ROOT/lib -lhdf5_hl -lhdf5"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

