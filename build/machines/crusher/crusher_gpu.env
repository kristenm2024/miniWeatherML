#!/bin/bash

source ${MODULESHOME}/init/bash
module load PrgEnv-amd cray-parallel-netcdf cmake craype-accel-amd-gfx90a cray-hdf5 cray-netcdf

export CC=cc
export FC=ftn
export CXX=CC

export YAKL_ARCH=HIP

export MPICH_GPU_SUPPORT_ENABLED=1

export YAKL_HIP_FLAGS="-DHAVE_MPI -DMW_GPU_AWARE_MPI -O3 -ffast-math -I${ROCM_PATH}/include -D__HIP_ROCclr__ -D__HIP_ARCH_GFX90A__=1 --rocm-path=${ROCM_PATH} --offload-arch=gfx90a -x hip -Wno-unused-result -I/ccs/home/imn/yaml/include -Wno-macro-redefined"
export YAKL_F90_FLAGS="-O2 -DSCREAM_DOUBLE_PRECISION"
export MW_LINK_FLAGS="--rocm-path=${ROCM_PATH} -L${ROCM_PATH}/lib -lamdhip64 -L/ccs/home/imn/yaml/lib64 -lyaml-cpp"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

