#!/bin/bash

export YAKL_ARCH=CUDA

export CC=mpicc
export CXX=mpic++
export FC=mpif90

export YAKL_CUDA_FLAGS="-DHAVE_MPI -g -O0 -DYAKL_DEBUG -arch sm_50 -DYAKL_PROFILE --use_fast_math -ccbin mpic++ -I/usr/include/hdf5/serial"
export YAKL_F90_FLAGS="-O0 -g -ffree-line-length-none"
export MW_LINK_FLAGS="-lnetcdf -lpnetcdf -L/usr/lib/x86_64-linux-gnu/hdf5/serial -lhdf5 -lyaml-cpp"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
