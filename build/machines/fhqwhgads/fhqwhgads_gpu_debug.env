#!/bin/bash

export YAKL_ARCH=CUDA

export CXX=mpic++

export YAKL_CUDA_FLAGS="-DHAVE_MPI -g -O0 -DYAKL_DEBUG -arch sm_50 -DYAKL_PROFILE --use_fast_math -ccbin mpic++"
export YAKL_F90_FLAGS="-O0 -g -ffree-line-length-none"
export YAKL_C_FLAGS="-O0 -g"
export NCFLAGS="-lpnetcdf -lnetcdf"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
