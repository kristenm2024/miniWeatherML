#!/bin/bash

unset YAKL_ARCH

export CC=mpicc
export CXX=mpic++
export FC=mpif90
export F90=mpif90
export F77=mpif90

export YAKL_CXX_FLAGS="-O2 -DHAVE_MPI"
export YAKL_C_FLAGS="-O2"
export YAKL_F90_FLAGS="-O2 -ffree-line-length-none"
export NCFLAGS="-lpnetcdf"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
