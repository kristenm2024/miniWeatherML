#!/bin/bash

export YAKL_ARCH=CUDA

export CXX=mpic++

export YAKL_CUDA_FLAGS="-DHAVE_MPI -O3 -arch sm_50 -DYAKL_PROFILE --use_fast_math -ccbin mpic++"
export YAKL_F90_FLAGS="-O3 -ffree-line-length-none"
export YAKL_C_FLAGS="-O3"
export NCFLAGS="-lpnetcdf -lnetcdf"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
