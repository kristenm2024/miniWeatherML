#!/bin/bash

unset YAKL_ARCH

export CC=mpicc
export CXX=mpic++
export FC=mpif90
export F90=mpif90
export F77=mpif90

export YAKL_CXX_FLAGS="-DHAVE_MPI -g -O0 -DYAKL_DEBUG"
export YAKL_F90_FLAGS="-O0 -g -ffree-line-length-none"
export NCFLAGS="-lpnetcdf -lnetcdf"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
