#!/bin/bash

source $MODULESHOME/init/bash
module purge
# module load DefApps gcc/9.3.0 cuda/11.4.2 cmake hdf5 curl sz zlib netcdf-c parallel-netcdf
module load DefApps gcc/9.3.0 cuda/11.0.3 cmake hdf5 curl sz zlib netcdf-c parallel-netcdf

export CC=mpicc
export FC=mpif90
export CXX=mpic++

export YAKL_ARCH=CUDA

export YAKL_CUDA_FLAGS="-DMW_GPU_AWARE_MPI -DHAVE_MPI -O3 -arch sm_70 --use_fast_math -DYAKL_PROFILE -I${OLCF_NETCDF_C_ROOT}/include -I${OLCF_PARALLEL_NETCDF_ROOT}/include -ccbin mpic++"
export YAKL_F90_FLAGS="-O2 -ffree-line-length-none -DSCREAM_DOUBLE_PRECISION"
export MW_LINK_FLAGS="`${OLCF_NETCDF_C_ROOT}/bin/nc-config --libs` -L${OLCF_PARALLEL_NETCDF_ROOT}/lib -lpnetcdf"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
