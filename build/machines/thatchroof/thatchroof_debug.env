#!/bin/bash

unset YAKL_ARCH

export CC=mpicc
export CXX=mpic++
export FC=mpif90
export F90=mpif90
export F77=mpif90

export YAKL_CXX_FLAGS="-O0 -g -DPAM_DEBUG -DYAKL_DEBUG -I/usr/include/hdf5/serial"
export YAKL_F90_FLAGS="-O0 -g -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export NCFLAGS="`nc-config --libs` -L/usr/lib/x85_64-linux-gnu -lpnetcdf -L/usr/lib/x86_64-linux-gnu/hdf5/serial -lhdf5"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

