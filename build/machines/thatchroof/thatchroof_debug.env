#!/bin/bash

unset YAKL_ARCH

export CC=mpicc
export CXX=mpic++
export FC=mpif90
export F90=mpif90
export F77=mpif90

export YAKL_CXX_FLAGS="-O0 -g -DPAM_DEBUG -DYAKL_DEBUG -I/opt/netcdf_gnu/include -I/opt/parallel-netcdf-1.12.0_gnu/include -I/usr/include/hdf5/serial"
export YAKL_C_FLAGS="-O0 -g"
export YAKL_F90_FLAGS="-O0 -g -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export NCFLAGS="`/opt/netcdf_gnu/bin/nc-config --libs` -L/opt/parallel-netcdf-1.12.0_gnu/lib -lpnetcdf -L/usr/lib/x86_64-linux-gnu/hdf5/serial -lhdf5 -ljsoncpp"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

export CXXFLAGS="-O0 -g -DSCREAM_CONFIG_IS_CMAKE"
