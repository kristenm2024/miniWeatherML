#!/bin/bash

export YAKL_ARCH=OPENMP

export CC=mpicc
export CXX=mpic++
export FC=mpif90
export F90=mpif90
export F77=mpif90

export YAKL_OPENMP_FLAGS="-fopenmp -O3 -DYAKL_DEBUG -I/opt/netcdf_gnu/include -I/opt/parallel-netcdf-1.12.0_gnu/include"
export YAKL_C_FLAGS="-O3"
export YAKL_F90_FLAGS="-O2 -ffree-line-length-none"
export NCFLAGS="`/opt/netcdf_gnu/bin/nc-config --libs` -L/opt/parallel-netcdf-1.12.0_gnu/lib -lpnetcdf"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

