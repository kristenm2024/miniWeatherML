#!/bin/bash

export YAKL_ARCH=CUDA

export CXX=mpic++

export YAKL_CUDA_FLAGS="-O0 -g -DYAKL_DEBUG -arch sm_35 --use_fast_math -ccbin mpic++ -DYAKL_PROFILE -I/opt/netcdf_gnu/include -I/opt/parallel-netcdf-1.12.0_gnu/include -I/usr/include/hdf5/serial"
export YAKL_F90_FLAGS="-O0 -g -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export NCFLAGS="`/opt/netcdf_gnu/bin/nc-config --libs` -L/opt/parallel-netcdf-1.12.0_gnu/lib -lpnetcdf -L/usr/lib/x86_64-linux-gnu/hdf5/serial -lhdf5 -ljsoncpp"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
