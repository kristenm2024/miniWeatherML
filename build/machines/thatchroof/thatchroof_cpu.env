#!/bin/bash

unset YAKL_ARCH

export CC=mpicc
export CXX=mpic++
export FC=mpif90

export YAKL_CXX_FLAGS="-O3 -DHAVE_MPI -I/usr/include/hdf5/serial"
export YAKL_F90_FLAGS="-O2 -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export MW_LINK_FLAGS="`nc-config --libs` -L/usr/lib/x85_64-linux-gnu -lpnetcdf -L/usr/lib/x86_64-linux-gnu/hdf5/serial -lhdf5"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

